<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm py-3">
    <div class="container">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "logo.png", alt: "WorkNest", class: "custom-logo" %>
      <% end %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav ms-auto">
          <% if venue_admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "Venues", admin_venues_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to "Logout",
                          destroy_venue_admin_session_path,
                          data:  { turbo_method: :delete },
                          class: "nav-link text-dark" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Home", root_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to "Login",
                          new_venue_admin_session_path,
                          class: "nav-link text-dark" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>