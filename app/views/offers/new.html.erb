<% if @venue %>
  <h1>New Offer for <%= @venue.name %></h1>
  <%= form_with(model: [@venue, @offer], local: true) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, required: true %>
    </div>
    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description, required: true %>
    </div>
    <div class="field">
      <%= form.label :price %>
      <%= form.number_field :price, step: 0.01, required: true %>
    </div>
    <%= form.submit 'Create Offer', class: 'btn btn-primary' %>
  <% end %>
<% else %>
  <p>Please select a valid venue to create an offer.</p>
<% end %>
