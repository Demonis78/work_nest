<h1>New Order</h1>

<%= turbo_frame_tag "new_order" do %>
  <%= form_with(model: [@offer, @order], local: true) do |form| %>
    <div class="field">
      <%= form.label :quantity, "Quantity" %>
      <%= form.number_field :quantity, min: 1 %>
    </div>

    <%= form.submit 'Place Order', class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to 'Back', offer_path(@offer) %>
