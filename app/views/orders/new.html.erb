<h1>New Order</h1>

<%= form_with(model: [@variant, @order], local: true) do |form| %>
  <div class="field">
    <%= form.label :quantity, "Quantity" %>
    <%= form.number_field :quantity, min: 1 %>
  </div>

  <%= form.submit 'Place Order', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back', variant_path(@variant) %>
