<h2> Showing results for <%= @location %> </h2>
<% if @venues.any? %>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @venues.each do |venue| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <img src="<%= venue_image_url(venue) %>" class="card-img-top" alt="<%= venue.name %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= venue.name %></h5>

            <% if venue.address %>
              <p class="card-subtitle mb-2 text-muted">
                <%= venue.address.street %><br>
                <%= venue.address.city %>
              </p>
            <% end %>

            <p class="card-text mb-2">
              <small class="text-muted">
                <%= pluralize(venue.offers.size, "offer") %> available
              </small>
            </p>

            <div class="mb-2 text-muted small">
              <span class="me-2" title="Wiâ€‘Fi"><i class="bi bi-wifi"></i></span>
              <span class="me-2" title="Parking"><i class="bi bi-car-front"></i></span>
              <span class="me-2" title="Coffee"><i class="bi bi-cup-hot"></i></span>
            </div>

            <p class="card-text text-muted flex-grow-1">
              <%= truncate(venue.description, length: 100) %>
            </p>

            <div class="mt-auto">
              <%= link_to "Go to Venue", venue_path(venue), class: "btn btn-primary w-100 mb-2" %>
              <%= link_to "Back to home", root_path, class: "btn btn-outline-secondary w-100" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info mb-3">No venues found for this location.</div>
  <%= link_to "Back to home", root_path, class: "btn btn-primary" %>
<% end %>